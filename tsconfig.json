{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots": [
      "/usr/lib/node_modules/1c/@types",
      "lib/@types",
      "node_modules/@types"
    ]
  },
  "include": [
    "/usr/lib/node_modules/1c/@types/**/*.d.ts",
    "lib/@types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
