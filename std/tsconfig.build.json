{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "noUnusedLocals": true,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "/usr/local/share/.config/yarn/global/node_modules/1c/@types/common/*.d.ts",
    "/usr/local/share/.config/yarn/global/node_modules/1c/@types/jdk/rt/java.*.d.ts",
    "/usr/local/share/.config/yarn/global/node_modules/1c/@types/jdk/rt/javax.*.d.ts",
    "/usr/local/share/.config/yarn/global/node_modules/1c/@types/jdk/rt/jdk.*.d.ts",
    "lib/@types/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
